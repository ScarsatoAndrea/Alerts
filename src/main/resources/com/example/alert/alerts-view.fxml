<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<HBox xmlns="http://javafx.com/javafx/19" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.alert.AlertsController">
   <children>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Button fx:id="btnSave" mnemonicParsing="false" onAction="#onBtnSaveClick" text="Salva" />
            <Label fx:id="postureText" text="Postura">
               <VBox.margin>
                  <Insets top="10.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="drinkText" text="Bere">
               <VBox.margin>
                  <Insets bottom="25.0" top="25.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <Label fx:id="restText" text="Riposare">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
         </children>
      </VBox>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0">
         <children>
            <Label fx:id="titleText" alignment="CENTER" contentDisplay="CENTER" prefHeight="22.0" prefWidth="102.0" text="Gestore Alerts" textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="10.0" />
               </VBox.margin>
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <TextField fx:id="txtPostureTime">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtDrinkTIme">
               <VBox.margin>
                  <Insets bottom="20.0" top="20.0" />
               </VBox.margin>
            </TextField>
            <TextField fx:id="txtRestTime" />
         </children>
      </VBox>
      <VBox alignment="CENTER" spacing="20.0">
          <padding>
              <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
          </padding>
         <Button fx:id="btnPostureTime" mnemonicParsing="false" onAction="#onBtnPostureTimeClick" text="Min.">
            <VBox.margin>
               <Insets top="28.0" />
            </VBox.margin>
         </Button>
          <Button fx:id="btnDrinkTime" onAction="#onBtnDrinkTimeClick" text="Min." />
         <Button fx:id="btnRestTime" mnemonicParsing="false" onAction="#onBtnRestTimeClick" text="MIn." />
      </VBox>
   </children>
</HBox>
